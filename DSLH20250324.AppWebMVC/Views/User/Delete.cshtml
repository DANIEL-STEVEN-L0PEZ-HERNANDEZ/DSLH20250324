@model DSLH20250324.AppWebMVC.Models.User

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h1 class="mb-0">Eliminar Usuario</h1>
        </div>
        <div class="card-body">
            <h3 class="text-warning">¿Está seguro que desea eliminar este usuario?</h3>
            <div class="mt-3">
                <h4>Detalles del Usuario</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.Username)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Username)
                    </dd>
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.Password)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Password)
                    </dd>
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.Role)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Role)
                    </dd>
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.Notes)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="card-footer text-end">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-danger btn-lg me-2" />
            </form>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Regresar a la Lista</a>
        </div>
    </div>
</div>











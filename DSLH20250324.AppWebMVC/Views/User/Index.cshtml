@model IEnumerable<DSLH20250324.AppWebMVC.Models.User>

@{
    ViewData["Title"] = "Usuarios";
}
<link href="https://fonts.googleapis.com/css2?family=Bubblegum+Sans&display=swap" rel="stylesheet">

<div class="container mt-4">
    <h1 class="display-4 text-center" style="font-family:'Bubblegum Sans'">Usuarios Registrados</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
    </p>

    <table class="table table-striped table-bordered table-hover" id="userTable">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Username)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th>@Html.DisplayNameFor(model => model.Notes)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Password)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role)</td>
                    <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm mx-1" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a class="btn btn-info btn-sm mx-1" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a class="btn btn-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json"
                }
            });
        });
    </script>
}












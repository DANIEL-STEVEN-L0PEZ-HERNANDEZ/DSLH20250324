@model DSLH20250324.AppWebMVC.Models.User

@{
    ViewData["Title"] = "Editar";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h1 class="mb-0">Editar Usuario</h1>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label fw-bold">Nombre de Usuario</label>
                    <input asp-for="Username" class="form-control border-primary" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control border-primary" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Contraseña</label>
                    <input asp-for="Password" class="form-control border-primary" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label fw-bold">Rol</label>
                    <input asp-for="Role" class="form-control border-primary" />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Notes" class="form-label fw-bold">Notas</label>
                    <input asp-for="Notes" class="form-control border-primary" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



















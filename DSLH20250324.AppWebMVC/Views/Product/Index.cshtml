@model IEnumerable<DSLH20250324.AppWebMVC.Models.Product>

@{
    ViewData["Title"] = "Búsqueda de Productos";
}

<link href="https://fonts.googleapis.com/css2?family=Bubblegum+Sans&display=swap" rel="stylesheet">

<div class="container mt-5">
    <h1 class="display-4 text-center" style="font-family:'Bubblegum Sans'">Buscar Productos</h1>
    <form asp-action="Index" class="mt-4">
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">Nombre</label>
                    <input type="text" name="ProductName" class="form-control" placeholder="Escribe el nombre del producto" />
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label class="form-label">Descripción</label>
                    <textarea name="Description" class="form-control" placeholder="Escribe la descripción del producto"></textarea>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">Bodegas</label>
                    <select name="WarehouseId" class="form-control" asp-items="ViewBag.WarehouseId"></select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">Marcas</label>
                    <select name="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">Cant. Registros</label>
                    <select name="topRegistro" class="form-control">
                        <option selected value="10">10</option>
                        <option value="20">20</option>
                        <option value="60">60</option>
                        <option value="100">100</option>
                        <option value="500">500</option>
                        <option value="1000">1000</option>
                        <option value="0">Todos</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row mt-3 text-center">
            <div class="col-md-12">
                <button type="submit" class="btn btn-secondary btn-sm">Buscar</button>
                <a class="btn btn-dark btn-sm" asp-action="Create">Ir a Crear</a>
            </div>
        </div>
    </form>

    <hr />

    <table class="table table-striped table-bordered table-hover mt-4" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                <th>@Html.DisplayNameFor(model => model.First().Brand.Id)</th>
                <th>@Html.DisplayNameFor(model => model.First().Warehouse.Id)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Brand.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Warehouse.Id)</td>
                    <td class="text-center">
                        <a class="btn btn-primary btn-sm mx-1" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-info btn-sm mx-1" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json"
                }
            });
        });
    </script>
}













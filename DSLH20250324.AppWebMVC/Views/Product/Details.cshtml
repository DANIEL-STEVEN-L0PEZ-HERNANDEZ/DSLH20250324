@model DSLH20250324.AppWebMVC.Models.Product

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h2 class="text-center">Detalles del Producto</h2>
        </div>
        <div class="card-body">
            <h4 class="mt-3">Información del Producto</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand.BrandId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Warehouse)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Warehouse.WarehouseId)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-center gap-3">
                <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>












@model DSLH20250324.AppWebMVC.Models.Product

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h2 class="text-center">Eliminar Producto</h2>
        </div>
        <div class="card-body">
            <h3 class="text-center">¿Estás seguro que deseas eliminar este producto?</h3>
            <div class="mt-4">
                <h4>Detalles del Producto</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Brand)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Brand.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Warehouse)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Warehouse.Id)
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
















@model IEnumerable<DSLH20250324.AppWebMVC.Models.Brand>

@{
    ViewData["Title"] = "Búsqueda de Marcas";
}

<link href="https://fonts.googleapis.com/css2?family=Bubblegum+Sans&display=swap" rel="stylesheet">
<div class="container mt-5">
    <h1 class="display-4 text-center" style="font-family:'Bubblegum Sans'">Buscar Marcas</h1>
    <form asp-action="Index" class="mt-4">
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">Nombre</label>
                    <input type="text" name="BrandName" class="form-control" placeholder="Escribe el nombre de la marca" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">País</label>
                    <input name="Country" class="form-control" placeholder="Escribe el país" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">Cant. Registros</label>
                    <select name="topRegistro" class="form-control">
                        <option selected value="10">10</option>
                        <option value="20">20</option>
                        <option value="60">60</option>
                        <option value="100">100</option>
                        <option value="500">500</option>
                        <option value="1000">1000</option>
                        <option value="0">Todos</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row mt-3 text-center">
            <div class="col-md-12">
                <button type="submit" class="btn btn-secondary btn-sm">Buscar</button>
                <a class="btn btn-dark btn-sm" asp-action="Create">Ir a Crear</a>
            </div>
        </div>
    </form>

    <hr />

    <table class="table table-striped table-bordered table-hover mt-4" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().BrandName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Country)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BrandName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                    <td class="text-center">
                        <a class="btn btn-primary btn-sm mx-1" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-info btn-sm mx-1" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json"
                }
            });
        });
    </script>
}










@model DSLH20250324.AppWebMVC.Models.Warehouse

@{
    ViewData["Title"] = "Crear";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="mb-0">Crear Bodega</h1>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger">Errores en el formulario.</div>
                <div class="form-group">
                    <label asp-for="WarehouseName" class="form-label fw-bold">Nombre de la Bodega</label>
                    <input asp-for="WarehouseName" class="form-control border-primary" />
                    <span asp-validation-for="WarehouseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Notes" class="form-label fw-bold">Notas</label>
                    <input asp-for="Notes" class="form-control border-primary" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input type="submit" value="Crear" class="btn btn-primary btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Regresar a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





